{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "allowJs": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": "src",
    "paths": {
      "@services": ["app/shared/services/index"],
      "@modal": ["app/shared/modal/modal.component"],
      "@models": ["app/shared/store/models/index"],
      "@store": ["app/shared/store/index"],
      "@environment": ["environments/environment"]
    }
  }
}
